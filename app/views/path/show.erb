<div class="inner cover path-wrapper <%= select_first(:path) %>">
    <h1 class="cover-heading">Das Path: <%= @path.name %></h1>
    <p class="lead">
    <dl class="dl-horizontal">
        <% @path.requirements_by_track.each do |tr, reqs| %>
            <h5><%= pp tr %></h5>
            <% reqs.each do |req| %>
                <dt><%= req.name %></dt>
                <dd>
                <div class="path-row" data-requirement="<%= req.id %>">
                    <% courses = @path.enrollments(req).map {|e| e.course } %>
                    <% [req.min_count, courses.count].max.times do |i| %>
                        <%= render_cell courses[i] %> <%# Renders empty cells for unfilled requirements %>
                    <% end%>
                </div>
                </dd>
            <% end %>
        <% end %>


    </dl>
    <h5>Unassigned classes</h5>
    <ul class="extra-cells">
        <% @path.unassigned_enrollments.map {|e| e.course }.each do |c| %>
        <li><%= render_cell(c) %></li>
        <% end %>
    </ul>
    </p>
</div>